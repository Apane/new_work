.selectify .header {
background: #eeeeee; /* Old browsers */
background: -moz-linear-gradient(top,  #eeeeee 0%, #eaeaea 4%, #ebebeb 21%, #eeeeee 29%, #ededed 32%, #f1f1f1 50%, #efefef 54%, #ffffff 100%); /* FF3.6+ */
background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#eeeeee), color-stop(4%,#eaeaea), color-stop(21%,#ebebeb), color-stop(29%,#eeeeee), color-stop(32%,#ededed), color-stop(50%,#f1f1f1), color-stop(54%,#efefef), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
background: -webkit-linear-gradient(top,  #eeeeee 0%,#eaeaea 4%,#ebebeb 21%,#eeeeee 29%,#ededed 32%,#f1f1f1 50%,#efefef 54%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
background: -o-linear-gradient(top,  #eeeeee 0%,#eaeaea 4%,#ebebeb 21%,#eeeeee 29%,#ededed 32%,#f1f1f1 50%,#efefef 54%,#ffffff 100%); /* Opera 11.10+ */
background: -ms-linear-gradient(top,  #eeeeee 0%,#eaeaea 4%,#ebebeb 21%,#eeeeee 29%,#ededed 32%,#f1f1f1 50%,#efefef 54%,#ffffff 100%); /* IE10+ */
background: linear-gradient(to bottom,  #eeeeee 0%,#eaeaea 4%,#ebebeb 21%,#eeeeee 29%,#ededed 32%,#f1f1f1 50%,#efefef 54%,#ffffff 100%); /* W3C */
filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#eeeeee', endColorstr='#ffffff',GradientType=0 ); /* IE6-9 */

    border: 1px solid #EBEBEB;
    border-radius: 5px;
    cursor: pointer;
}

.selectify .header .icon
{


    content: " ";
    height: 0;
    margin-left: -7px;
    position: absolute;
    width: 0;
    right: 0.5em;
    margin-top: -5px;

    background:url("<%= asset_path('jquery.selectBox-arrow.gif') %>") no-repeat 65px 10px;

}

.selectify .header .selected {
    background: url("<%= asset_path('jquery.selectBox-arrow.gif') %>") no-repeat scroll 65px 8px rgba(0, 0, 0, 0);
    color: #929292;
    font-size: 10px;
    padding: 6px 6px;
    width: auto;
}

