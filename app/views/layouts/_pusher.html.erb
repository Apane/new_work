<script type="text/javascript">
<% if current_user %>
$(function() {
  var faye = new Faye.Client('http://localhost:9292/faye');
  faye.subscribe("/notifications/for/user/<%= current_user.id %>", function (data) {
    eval(data);
    $.ajax({url: "/refresh_notifications/", type: "GET"});
  });
});
<% end %>
</script>
