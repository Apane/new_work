<%= content_for :header_js do %>
  <script>
  $(function() {
    var addresspickerMap = $( "#event_location" ).addresspicker({
      regionBias: "fr",
      updateCallback: showCallback,
      mapOptions: {
        zoom: 10,
        center: new google.maps.LatLng(46, 2),
        scrollwheel: false,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      },
      elements: {
        map:      "#map",
        lat:      "#event_lat",
        lng:      "#event_lng",
        street_number: '#street_number',
        route: '#route',
        locality: '#locality',
        administrative_area_level_2: '#event_district',
        administrative_area_level_1: '#event_state',
        country:  '#event_country',
        postal_code: '#event_postal_code'
      }
    });

    var gmarker = addresspickerMap.addresspicker( "marker");
    gmarker.setVisible(true);
    addresspickerMap.addresspicker( "updatePosition");

    $('#reverseGeocode').change(function(){
      $("#addresspicker_map").addresspicker("option", "reverseGeocode", ($(this).val() === 'true'));
    });

    function showCallback(geocodeResult, parsedGeocodeResult){
      $('#callback_result').text(JSON.stringify(parsedGeocodeResult, null, 4));
    }
    // Update zoom field
    var map = $("#addresspicker_map").addresspicker("map");
    google.maps.event.addListener(map, 'idle', function(){
      $('#zoom').val(map.getZoom());
    });
  });
  </script>
<% end %>

<%= form_for @event do |f| %>
  <h5>Event title:</h5>
  <div><%= f.text_field :title, placeholder: "Event title", required: true %></div>
  <h5>Location Address:</h5>
  <div><%= f.text_field :location, placeholder: "Location Address", required: true, autocomplete: :off %></div>
  <h5>Location Name:</h5>
  <div><%= f.text_field :location_name, placeholder: "Location Name", required: true %></div>
  <h5>Event date:</h5>
  <div><%= f.text_field :date  %></div>
  <h5>Event time:</h5>
  <div><%= f.text_field :time  %></div>
  <h5>Event description:</h5>
  <div>
    <%= f.text_area :description, placeholder: "Event description", required: true, autocomplete: :off %>
  </div>
  <h5>Event type</h5>
  <div>
    <%= f.radio_button :event_type, '1', :checked => true %>
    <%= label :event_type_P, 'Private', value: '1' %>
    <%= f.radio_button :event_type, '0' %>
    <%= label :event_type_sms, 'Public', value: '0' %>
  </div>

  <div class="extra_attr">
    <%= f.hidden_field :lng %>
    <%= f.hidden_field :lat %>
    <%= f.hidden_field :country %>
    <%= f.hidden_field :postal_code %>
    <%= f.hidden_field :state %>
    <%= f.hidden_field :district %>
  </div>
  <br>
  <div>
    <%= f.submit @event.new_record? ? "Create event" : "Update event", class: 'btn'  %>
    <%= link_to 'Cancel', events_path, class: 'btn' %>
  </div><br />
<% end %>
