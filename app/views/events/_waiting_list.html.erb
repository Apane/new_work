<div class="panel-heading">
  <h3 class="panel-title waiting_count"><%= pluralize(@waiting_participants.size, 'person') %> waiting</h3>
</div>
<div class="panel-body pading-n event_waiting_participants">
  <% @waiting_participants.each do |user| %>
    <div class="row attending-peoples participant_<%= user.id %>">
      <div class="col-xs-12">
        <div class="attending-peoples-image">
          <% if user.profile_photo.present? %>
            <%= image_tag(user.profile_photo.file.small.url) %>
          <% else %>
            <%= image_tag("people_image.jpg") %>
          <% end %>
        </div>
        <p><%= user.name %></p>
        <div class="clr"></div>
      </div>
    </div>
  <% end %>
</div>
<!-- needed span - attend.js.erb -->
<span class="waiting_participants"></span>
