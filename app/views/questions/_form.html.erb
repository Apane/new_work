<%= form_for @question, html: {remote: true, class: 'form'} do |f| %>
  <div class="form-group">
    <%= f.text_area :answer, class: 'form-control', rows: 8, style: 'resize: none;' %>
  </div>
  <%= f.submit 'Save', class: 'btn btn-default btn-sm creat-event update_question' %>
  <%= link_to 'Cancel', @question, remote: true, class: 'btn btn-default btn-sm cencel-event update_question' %>
<% end %>
