<div class="row">
  <%= render 'layouts/left_side' %>
  <div role="main" class="col-md-6">
    <div class="message-info">
      <!-- <button type="button" class="btn btn-primary buttons-bg reply-icon"> Reply</button> -->
      <%= button_tag 'Mark As Unread', class: 'btn btn-primary buttons-bg markas-icon mark_unread' %>
      <%= button_tag 'Delete', class: 'btn btn-primary buttons-bg delete-icon remove_conversations' %>
      <button type="button" class="btn btn-primary buttons-bg blocks-icon"> Block </button>
      <button type="button" class="btn btn-primary buttons-bg report-icon"> Report</button>

      <div class="col-md-12 inbox-messages">
        <div class="row">
          <div class="col-md-12 inbox-m">
            <h4><%= current_user.new_messages.size %> Unread Messages</h4>
          </div>
          <%= form_tag '/act_on_conversations', class: 'act_on_conversations' do %>
          <ul>
            <% @messages.each do |sender, messages| %>
              <%= render 'inbox_message', messages: messages %>
            <% end %>
          </ul>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>

<script type="text/javascript">
  $('.remove_conversations').on('click', function(event) {
    $('.act_on_conversations').attr('action', '/act_on_conversations?act=delete');
    $('.act_on_conversations').submit();
  });

  $('.mark_unread').on('click', function(event) {
    $('.act_on_conversations').attr('action', '/act_on_conversations?act=unread');
    $('.act_on_conversations').submit();
  });
</script>
