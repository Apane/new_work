<%= render "shared/header" %>
<%= render 'home/breadcrumbs' %>

<div class="container">
  <div class="row">
    <div class="span3">
      <%#= render 'home/sidebar' %>
      <h5>Interesting people</h5>
       <% @interesting_people.each do |person| %>
         <% if person.first_name.present? %>
         <%= simple_user_avatar(person) %>
        <% end %>
      <% end %>
    </div>
    <div class="span6">
      <%#= render 'messages_menu' %>

     <div class="messages">
      <% if @messages.empty? %>
        <h5>Your inbox is empty...</h5>
      <% else %>
        <hr>
      <% @messages.each do |sender, messages| %>
        <%= render 'inbox_message', messages: messages %>
      <% end %>
     <% end %>
    </div>



    </div>
    <div class="span3">

    </div>
  </div>
</div>
<%= render '/shared/footer' %>

