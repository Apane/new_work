<li class='photo_<%= photo.id %>'>
  <%= photo.profile_photo? ? '(current profile photo)' : '' %>
  <%= image_tag(photo.file.url) %>
  <p class="caption"><%= best_in_place photo, :title, activator: ".edit-caption.photo_#{photo.id}",  nil: 'Add a caption to your photo...2', inner_class: 'form-control' %><span class="edit-icon pull-right edit-caption photo_<%= photo.id %>"></span></p>

 <br />

 <p class="summary-info"><%= text_field photo, :description, placeholder: 'Add a description to your photo...', activator: ".edit-desc.photo_#{photo.id}" %><span class="edit-icon pull-right edit-desc photo_<%= photo.id %>"></span></p>

  <%= form_tag add_as_profile_photo_path(photo), class: 'form-inline', method: :put do %>
    <%= button_tag 'Set as profile picture', class: 'btn btn-primary btn-lg photo-b' %>
  <% end %>
  <%= link_to "delete", photo, :confirm => 'Are you sure?', :method => :delete, remote: true, class: 'btn btn-primary btn-lg photo-b' %>
  <div class="photo-up-down"> <a href="#">up</a> <a href="#">down</a> </div>
</li>
