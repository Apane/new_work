<%= render '/shared/header' %>

<div id="user">
  <div class="new_user">
    <div class="container">
      <div class="row">
	<div class="edit">
	    <h2>Profile</h2>
	  <%= render 'menu' %>
	  <div class="span5">
	    <h3>Personal information</h3>
	    <h4>This information appears on your public profile, search results, and beyond.</h4>
	    <div class="name2"></div>
	    <%= simple_form_for(@user, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
	      <%= devise_error_messages! %>
	     
	      <h5>First name:</h5>
	      <%= f.input_field :first_name, placeholder: "Your first name", required: true, autocomplete: :off %>

	      <h5>Last name:</h5>
	      <%= f.input_field :last_name, placeholder: "Your last name", required: true, autocomplete: :off %>

	      <h5>Address/city/state:</h5>
	      <%= f.input_field :address, placeholder: "Address", required: true, autocomplete: :off %>

	      <h5>Zip/Postal code:</h5>
	      <%= f.input_field :zip, placeholder: "Your zip or postal code", required: true, autocomplete: :off %>

	      <h5>Occupation:</h5>
	      <%= f.input_field :occupation, placeholder: "Occupation", autocomplete: :off %>

	      <h5>Birthday:</h5> 
	      <%= f.date_select :birthday, 
                {:start_year => Time.now.year,
        :end_year => 1900,
        :use_short_month => true,
        :order => [:month, :day, :year],
        :prompt => {:month => 'Month', :day => 'Day', :year => 'Year'}},
      {:class => 'year',
        :id => 'user_birthday'}%><br />

      </div>

      <div class="span5">
	<div class="side-bg">
	<br />
	<%= image_tag("test-img.jpg") %><br />
	Update photo: <br /><br />

	<h5>Gender:</h5>
	<label class="radio inline">
	  <span class="pushm"><%= f.radio_button "gender", "M" %>
	    Male
	  </span>
	</label>
	<label class="radio inline">
	  <span class="pushf">
	    <%= f.radio_button "gender", "F" %>
	    Female
	  </span>
	</label><br /><br />

	<h5 class="box">About me:<%= f.input_field :aboutme, placeholder: "Tell us about yourself", :cols => "30", :rows => "70" %></h5>
	<div><%= f.submit "Update profile", class: "btn btn-warning" %></div>

      <% end %>
	</div>
       </div>
    </div>
  </div>
  <%= render '/shared/footer' %>
</div>
</div>
</div>


