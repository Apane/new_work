<%= render '/shared/header' %>

<div id="user">
  <div class="new_user">
    <div class="container">
      <div class="row">
	<div class="edit">
	<h2>Account</h2>
	<%= render 'menu' %>
      <div class="span6">
	<h3>Settings</h3>
	<h4>Change your basic account and language settings.</h4>
	<div class="name2"></div>
	<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
	<%= devise_error_messages! %>
	<h5>Email:</h5>
	<%= f.input_field :email, placeholder: "Your email", autocomplete: :off %>

	<h5>Password:</h5>
	<%= f.input_field :password, placeholder: "Password", :autocomplete => "off" %>

	<h5>Password confirmation:</h5>
	<%= f.input_field :password_confirmation, placeholder: "Password confirmation", autocomplete: :off %>
	<div class="name2"></div>
	<p><%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
	
      </div>      
      </div>
      <span class="span4">
      <div class="side-bg">
	<h6>Note: You can change your password by simply typing a new one in the password fields.</h6>
	<div><%= f.submit "Update account", class: "btn btn-warning" %></div>
      </div>
      </span>
      <% end %>
      
      </div>
    </div>
  </div>
  <%= render '/shared/footer' %>
</div>
</div>



