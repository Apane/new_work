<div class="new_user">

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <%= devise_error_messages! %>

  <%= logo2 %>

  <br /><br />

  <div><%= f.input_field :email, placeholder: "Your email", required: true, autocomplete: :off %></div>

  <div><%= f.input_field :password, placeholder: "Password", required: true, autocomplete: :off %></div>

  <div><%= f.input_field :password_confirmation, placeholder: "Password confirmation", required: true, autocomplete: :off %></div>

  <div><%= f.input_field :first_name, placeholder: "Your first name", required: true, autocomplete: :off %></div>

  <div><%= f.input_field :last_name, placeholder: "Your last name", required: true, autocomplete: :off %></div>

  <div><%= f.input_field :zip, placeholder: "Your zip or postal code", required: true, autocomplete: :off %></div>

  Birthday: <br /><br />
  <%= f.date_select :birthday, 
  {:start_year => Time.now.year,
  :end_year => 1900,
  :use_short_month => true,
  :order => [:month, :day, :year],
  :prompt => {:month => 'Month', :day => 'Day', :year => 'Year'}},
  {:class => 'year',
  :id => 'user_birthday'}
%><br />
  Gender: <br />
  <label class="radio inline">
  <div class="pushm"><%= f.radio_button "gender", "M" %>
  Male
  </div>
  </label>
  <label class="radio inline">
  <div class="pushf">
  <%= f.radio_button "gender", "F" %>
  Female
  </div>
  </label><br /><br />
 
  <div><%= f.submit "Sign up", class: "btn btn-warning"  %></div><br />


<% end %>


</div>

