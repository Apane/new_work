<div class="row">
  <div class="col-md-6 creat-account-info">
    <div class="col-md-12 row">
      <%= image_tag 'creat-account-info-bg-image.png' %>
    </div>
    <div class="col-md-12 padding-left">
      <h1>Meet people like you near you</h1>
      <ul>
        <li>Publish new events</li>
        <li>Get others to join</li>
        <li>Find people with shared interests.</li>
      </ul>
    </div>
  </div>
  <div class="col-md-5 creat-account">
    <h1>Create New Account</h1>
    <div class="col-md-12 showing-event">
      <div class="row">
        <div class="col-md-12">
          <h4>Sign Up</h4>
        </div>
      </div>
    </div>
    <div class="col-md-12 event_info">
      <div class="row">
        <div class="col-md-12 event_m border-none">
          <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{role: 'form'}) do |f| %>
            <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :email_confirmation %>
              <%= f.email_field :email_confirmation, class: 'form-control' %>
            </div>
            <div class="form-group">
              <%= f.label :zip %>
              <%= f.text_field :zip, class: 'form-control' %>
            </div>
            <div class="form-group">
              <label for="Date" style="display:block; margin-bottom:5px;">Gender :</label>
              <div class="radio col-xs-6 row">
                <label>
                  <%= f.radio_button :gender, "1" %>
                  Male
                </label>
              </div>
              <div class="radio col-xs-6 row">
                <label>
                  <%= f.radio_button :gender, "0" %>
                  Female
                </label>
              </div>
              <div class="clr"></div>
            </div>
            <div class="form-group">
              <label for="Date" style="display:block; margin-bottom:5px;">Date of Birth :</label>
              <div class="row birth-date">
                <%= f.date_select :birthday, {
                  :order => [:day, :month, :year],
                  :start_year => 1940,
                  :end_year => 2004} %>
              </div>
              <div class="clr"></div>
            </div>
<!--             <div class="form-group">
              <label for="Date" style="display:block; margin-bottom:5px;">Profile Picture :</label>
              <div class="col-xs-3 row">
                <div class="profile-photo">
                  <%#= image_tag 'user-image.jpg' %>
                </div>
              </div>
              <div class="col-xs-9">
                <button type="button" class="btn btn-primary btn-lg btn-block upload-photo">Upload A Photo</button>
              </div>
              <div class="clr"></div>
            </div> -->
            <div class="col-md-12 text-center creat-b">
              <div align="center">
                <%= f.submit 'Create Account', class: 'btn btn-default btn-lg creat-event' %>
                <p>By clicking the button, you agree to the terms and conditions</p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="clr"></div>
</div>

<%= render "shared/footer" %>

<script type="text/javascript">
    $( document ).ready(function() {
      $("select").selectify();

      $( ".selectify" ).wrap( "<div class='col-xs-4'></div>" );
    });
</script>
