<div id="user">
<div class="new_user">
<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div align="right">
Don't have an account? 

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name) %> 
  </div>

  <%= logo2 %>

  <br /><br />

 <div><%= f.input_field :email, placeholder: "Your email", required: true, autocomplete: :off %></div>

 <div><%= f.input_field :password, placeholder: "Password", required: true, autocomplete: :off  %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me, checked: true %> <%= f.label :remember_me %></div>
  <% end -%><br />

    <div class="Form_Field Form_Field_Text marketing"><%= f.submit "Sign in", class: "btn btn-warning"  %></div><br />

<%= render "devise/shared/links" %>

<% end %>

<% end -%></div>

</div>
</div>
