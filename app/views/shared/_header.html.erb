<header class="navbar navbar-inverse">
  <div class="container">
    <div class="row">
      <div class="col-md-3 logo">
        <%= link_to image_tag('logo.png'), root_path %>
      </div>

      <div class="col-md-6">
        <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
              <div>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </div>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><a href="#">All</a></li>
              <li><%= link_to 'Browse', profiles_path %></li>
              <li><%= link_to 'Events', events_path %></li>
              <li><a href="#">Activities</a></li>
            </ul>
          </li>
        </ul>
        <input name="" type="text" class="search_input">
        <% end %>
      </div>

      <div class="col-md-3 myaccount">
        <% if user_signed_in? %>
          <%= link_to notifications_path, class: 'notes_area' do %>
            <%= image_tag('w_icon.png') %>
            <span class="notes_count"><%= current_user.new_notifications.size if current_user.new_notifications.any? %></span>
          <% end %>
          <%= link_to image_tag('inbox_icon.png'), messages_path %>
          <ul class="setting">
            <li class="dropdown">
              <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                <span><%= current_user.name %></span>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Edit profile', root_path %></li>
                <li><%= link_to 'Settings', settings_path %></li>
                <li><%= link_to "Log out" , destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
          <div class="clr"></div>
        <% else %>
          <span>
            <%= link_to 'Sign IN', new_user_session_path, class: 'btn btn-info sign-i-u' %>
            <%= link_to 'Sign UP', new_user_registration_path, class: 'btn btn-info sign-i-u' %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</header>
